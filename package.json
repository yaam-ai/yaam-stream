{
  "name": "yaam-stream",
  "version": "2.0.0",
  "description": "Professional animated document streaming library with AI integration, multiple export formats and premium design themes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yaam-stream": "dist/cli.js",
    "yaam": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "copyfiles -u 1 src/templates/**/* dist/",
    "dev": "tsc --watch",
    "dev:server": "npm run build && nodemon demo-server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "demo": "node demo-server.js",
    "start": "./starter.sh",
    "quick-start": "./starter.sh",
    "clean": "rm -rf dist node_modules package-lock.json",
    "reinstall": "npm run clean && npm install"
  },
  "keywords": [
    "document",
    "streaming",
    "animation",
    "report",
    "pdf",
    "powerpoint",
    "latex",
    "ai",
    "llm",
    "claude",
    "chatgpt",
    "presentation",
    "premium",
    "golden",
    "animated",
    "websocket",
    "real-time",
    "export",
    "professional"
  ],
  "author": "Claudisiar <claudisiar@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/claudisiar/yaam-stream.git"
  },
  "bugs": {
    "url": "https://github.com/claudisiar/yaam-stream/issues"
  },
  "homepage": "https://github.com/claudisiar/yaam-stream#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "js-yaml": "^4.1.0",
    "puppeteer": "^21.0.0",
    "handlebars": "^4.7.8",
    "marked": "^9.0.0",
    "pptxgenjs": "^3.12.0",
    "axios": "^1.6.0",
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "chokidar": "^3.5.3",
    "mime-types": "^2.1.35",
    "semver": "^7.5.4",
    "uuid": "^9.0.1",
    "fs-extra": "^11.1.1",
    "archiver": "^6.0.1",
    "sharp": "^0.32.6",
    "canvas": "^2.11.2",
    "latex": "^0.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/ws": "^8.5.8",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/multer": "^1.4.9",
    "@types/mime-types": "^2.1.3",
    "@types/uuid": "^9.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/archiver": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "templates"
  ]
